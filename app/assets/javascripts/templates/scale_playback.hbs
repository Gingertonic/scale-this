<div class="sequencer">
  {{#each midi_notes}}
    <div class="div_for_sequencer">
      <div class="pitch" id="pitch_{{@index}}", style="background-color: pink">
        {{this}}
      </div>
    </div>
  {{/each}}
</div>

<br></br>

<div class="scale_info">
  {{#with scale}}
    <p>Melody Rules:<br>{{melodyRules}}</p><br>
    <p>Origin:<br>{{origin}}</p><br>
    <p>Type:<br>{{scaleType}}</p>
    {{#if aka}}
      <br>
      <p>Also known as:<br>{{aka}}</p>
    {{/if}}
  {{/with}}
</div>
