<%=content_tag :div, class: ["form"] do%>
  <%=form_for @scale do |f|%>
    <%=f.label :name%>
    <%=f.text_field :name%><br>

    <%=f.label :scale_type%>
    <%=f.text_field :scale_type%><br>

    <%=f.label :origin%>
    <%=f.text_field :origin%><br>

    <%=f.label :melody_rules%>
    <%=f.text_area :melody_rules%><br>

    <%=f.label :aka "Also known as:"%>
    <%=f.text_area :aka%><br>

    <%=f.collection_check_boxes(:pattern, @note_selection, :midi_value, :solfege, { checked: @pattern.map })%><br>

    <%= f.label "Would you like to keep this scale private?" %> <br />
    <%= f.check_box :private %> <br />

    <%=f.submit%>
  <%end%>
<%end%>
