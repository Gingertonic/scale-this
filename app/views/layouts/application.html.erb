<!DOCTYPE html>
<html>
  <head>
    <title>ScaleThis</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = 'https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v3.0&appId=204061147101181&autoLogAppEvents=1';
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <div class="navbar">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
          <%if current_user%>
            <%=link_to "Your Practice Room", practice_room_path(current_user.slugify), class: "navbar-brand"%>
            <%=link_to "Scales Library", scales_path, class: "navbar-brand"%>
            <%=link_to "Log Out", logout_path, class: "navbar-brand"%>
          <%else%>
            <%=link_to "Sign Up", new_musician_path, class: "navbar-brand"%>
            <%=link_to "Sign In", login_path, class: "navbar-brand"%>
          <%end%>
        </div>
      </div>
    </div>

    <%if !flash.empty?%>
      <div class="flash-error">
        <% flash.each do |key, value| %>
          <%= content_tag :div, value, class: "flash #{key}" %>
        <% end %>
      </div>
    <%end%>

    <%= yield %>
  </body>
</html>
