<!DOCTYPE html>
<html>
  <head>
    <title>ScaleThis</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>

    <%= favicon_link_tag asset_path('scalethistextgh.png'), :rel => 'icon', :type =>  'image/png' %>

    <%= yield :og_header%>
    <%= tag(:meta, property: "twitter:site", content: "@GingertonicSt")%>
  </head>

  <body>

    <div id="navbar">
      <%=link_to "SCALE THIS", root_url, class: "nav-link home-link"%>
      <%=link_to "Scales Library", scales_path, class: "nav-link to_library"%>
      <%if current_user%>
        <%=link_to "Your Practice Room", '/scales#practise_room', class: "nav-link to_practice_room"%>
        <%=link_to "Log Out", logout_path, class: "nav-link"%>
      <%else%>
        <%=link_to "Sign Up", new_musician_path, class: "nav-link"%>
        <%=link_to "Sign In", login_path, class: "nav-link"%>
      <%end%>
    </div>

    <%if !flash.empty?%>
      <div class="flash-error">
        <% flash.each do |key, value| %>
          <%= content_tag :div, value, class: "flash #{key}" %>
        <% end %>
      </div>
    <%end%>

    <br />

    <%= yield %>
  </body>
</html>
