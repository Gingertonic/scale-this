<h1>Login</h1>

<%=link_to "Login with Facebook", '/auth/facebook'%>
<%=link_to "Login with Google", '/auth/google_oauth2'%>
<!-- <%=link_to "Login with Soundcloud", scales_path%> -->

<p>Or if you made an account especially with us login right here!</p>
<%=form_tag('/login') do%>
  <%=label_tag :email%>
  <%=text_field_tag :email%>

  <%=label_tag :password%>
  <%=password_field_tag :password%>

  <%=submit_tag "Login"%>
<%end%>
