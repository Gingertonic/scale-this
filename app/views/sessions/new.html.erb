<h1>Login</h1>

<%=link_to "Login with Facebook", '/auth/facebook'%>

<p>Or if you made an account especially with us login right here!</p>
<%=form_tag('/login') do%>
  <%=label_tag :email%>
  <%=text_field_tag :email%>

  <%=label_tag :password%>
  <%=password_field_tag :password%>

  <%=submit_tag "Login"%>
<%end%>
